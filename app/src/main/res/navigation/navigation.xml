<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/gameFragment">

    <fragment
        android:id="@+id/gameFragment"
        android:name="com.example.clickingbad.ui.scenes.game.GameFragment"
        android:label="fragment_game"
        tools:layout="@layout/fragment_game" >
        <action
            android:id="@+id/action_gameFragment_to_manufacturingFragment"
            app:destination="@id/manufacturingFragment" />
        <action
            android:id="@+id/action_gameFragment_to_distributionFragment"
            app:destination="@id/distributionFragment" />
        <action
            android:id="@+id/action_gameFragment_to_launderingFragment"
            app:destination="@id/launderingFragment" />
        <action
            android:id="@+id/action_gameFragment_to_upgradesFragment"
            app:destination="@id/upgradesFragment" />
    </fragment>
    <fragment
        android:id="@+id/manufacturingFragment"
        android:name="com.example.clickingbad.ui.scenes.manufacturing.ManufacturingFragment"
        android:label="fragment_manufacturing"
        tools:layout="@layout/fragment_manufacturing" >
        <action
            android:id="@+id/action_manufacturingFragment_to_gameFragment"
            app:destination="@id/gameFragment"
            app:popUpTo="@id/gameFragment"
            app:popUpToInclusive="false" />
    </fragment>
    <fragment
        android:id="@+id/distributionFragment"
        android:name="com.example.clickingbad.ui.scenes.distribution.DistributionFragment"
        android:label="fragment_distribution"
        tools:layout="@layout/fragment_distribution" >
        <action
            android:id="@+id/action_distributionFragment_to_gameFragment"
            app:destination="@id/gameFragment"
            app:popUpTo="@id/gameFragment"
            app:popUpToInclusive="false" />
    </fragment>
    <fragment
        android:id="@+id/launderingFragment"
        android:name="com.example.clickingbad.ui.scenes.laundering.LaunderingFragment"
        android:label="fragment_laundering"
        tools:layout="@layout/fragment_laundering" >
        <action
            android:id="@+id/action_launderingFragment_to_gameFragment"
            app:destination="@id/gameFragment"
            app:popUpTo="@id/gameFragment"
            app:popUpToInclusive="false" />
    </fragment>
    <fragment
        android:id="@+id/upgradesFragment"
        android:name="com.example.clickingbad.ui.scenes.upgrades.UpgradesFragment"
        android:label="fragment_upgrades"
        tools:layout="@layout/fragment_upgrades" >
        <action
            android:id="@+id/action_upgradesFragment_to_gameFragment"
            app:destination="@id/gameFragment"
            app:popUpTo="@id/gameFragment"
            app:popUpToInclusive="false" />
    </fragment>
</navigation>